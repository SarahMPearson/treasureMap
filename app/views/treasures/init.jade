extends ../shared/template
block content
  h2 Create a New Treasure
    .row
      .col-xs-12
        form(role='form', method='post', action='/treasures', enctype='multipart/form-data')
          .row
            .col-xs-6
              input#lat(type='hidden', name='lat')
              input#lng(type='hidden', name='lng')
              .form-group
                label(for='tName') Treasure Name
                input#name.form-control(type='text', placeholder='Gold', name='tName', autofocus =true)
              .form-group
                label(for='loc') Location
                input#loc.form-control(type='text', name='loc', placeholder='Nashville')
              .form-group
                label(for='hint') Hint
                br
                textarea#hint(type='textbox',name='hint', placeholder='dig here')
            .col-xs-6
              .form-group
                label(for='photo') Photo
                input.form-control#photo(type='file', name='photo', multiple=true)
              .form-group
                label(for='difficulty') Difficulty
                br
                select(name='difficulty')
                  option Hard
                  option Medium
                  option Easy
              button.btn.btn-success(type='submit') Add Treasure

block scripts
  script(src='/js/user/new-treasure.js')

